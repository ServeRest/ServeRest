{
  "name": "serverest",
  "version": "2.13.3",
  "description": "Servidor REST local de forma rápida e simples para estudo de testes de API",
  "author": "Paulo Gonçalves <paulorochag@hotmail.com> (https://www.linkedin.com/in/paulo-goncalves/)",
  "license": "GPL-3.0",
  "main": "./src/server.js",
  "bin": "./src/server.js",
  "files": [
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PauloGoncalvesBH/ServeRest.git"
  },
  "homepage": "https://serverest.js.org",
  "funding": {
    "type": "Open Collective",
    "url": "https://opencollective.com/serverest"
  },
  "keywords": [
    "testing",
    "server",
    "rest",
    "api"
  ],
  "scripts": {
    "commit": "git-cz",
    "start": "node ./src/server.js",
    "dev": "cross-env NODE_ENV=serverest-development nodemon ./src/server.js --nodoc",
    "test:mutation": "stryker run ./test/stryker.conf.js",
    "test": "cross-env NODE_ENV=serverest-test nyc mocha --config test/.mocharc.js",
    "posttest": "nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "generate-doc": "npx aglio@2 -i serverest.apib --theme-variables flatly --theme-template triple -o docs/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "colors": "^1.4.0",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-query-int": "^3.0.0",
    "express-validation": "^3.0.2",
    "jsonwebtoken": "^8.5.1",
    "moesif-nodejs": "^3.0.0",
    "morgan": "^1.10.0",
    "nedb": "^1.8.0",
    "open": "^7.0.3",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@hapi/joi": "^17.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@stryker-mutator/core": "^3.3.1",
    "@stryker-mutator/javascript-mutator": "^3.3.1",
    "@stryker-mutator/mocha-framework": "^3.3.1",
    "@stryker-mutator/mocha-runner": "^3.3.1",
    "chai": "^4.2.0",
    "commitizen": "^4.2.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "faker": "^5.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.3",
    "nyc": "^15.1.0",
    "semantic-release-docker": "^2.2.0",
    "standard": "^14.3.3",
    "supertest": "^5.0.0"
  },
  "engines": {
    "node": ">= 10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard": {
    "globals": [
      "beforeEach",
      "describe",
      "it",
      "request"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
